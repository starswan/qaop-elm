<div align="center">
  <div class="page-header">
    <b><%= t '.title', :default => @game.name %></b>(<%= @game.tapfile %>)
  </div>

  <dl class="dl-horizontal">
    <dd><%= link_to 'Play Java Version', game_path(@game, format: :jnlp) %>
    <%= link_to t('.back', :default => t("helpers.links.back")),
                games_path, :class => 'btn btn-default'  %>
    </dd>
  </dl>
  <div>
    <%= content_tag :canvas, 'Game', width: 512, height: 384, id: 'applet',
                    class: 'applet',
                    data: { load: "#{request.protocol}#{request.host_with_port}/#{@game.tapfile}",
                            rom: "#{request.protocol}#{request.host_with_port}/spectrum.rom" } %>
  </div>
  <%= inline_svg_tag 'keyboard.svg', width: "100%" %>
